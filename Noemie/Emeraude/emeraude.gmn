\voltaBegin<"1", "|-|">
	\harmony<"F    f     f", dy=$hdy1, dx=3, fsize=16pt>
	\lyrics<"8,9", dy=$Ty, fattrib="b">( {c2/2., e} )
\voltaEnd
\repeatEnd
\voltaBegin<"2", "|-|">
	\harmony<"A   a   a", dy=$hdy1, dx=0, fsize=16pt>
	\lyrics<"8,9", dy=$Ty, fattrib="b">( {c2, e} )
\voltaEnd
\doubleBar
\newLine
% section C
\mark<"C", enclosure="square", fsize=20pt, dy=8, dx=-8>
