	\harmony<"G", dy=$hdy1, dx=4, fsize=16pt>
	\lyrics<"8 6'", dy=$Ty, fattrib="b">( c2 b1 )
	\harmony<"A", dy=$hdy1, dx=0, fsize=16pt>
	\lyrics<"7 6'", dy=$Ty, fattrib="b">( a1 b1 )
	\harmony<"E", dy=$hdy1, dx=0, fsize=16pt>
	\lyrics<"6' 7", dy=$Py, fattrib="b">( c2 b1 )
