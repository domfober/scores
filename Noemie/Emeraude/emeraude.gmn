	\harmony<"E       e        e", dy=$hdy1, dx=0, fsize=16pt>
	_/4
	\lyrics<"7,8,7'", dx=2, dy=$Ty, fattrib="b">( {a1/4, c2, d} )
	\lyrics<"7,8,7'", dx=2, dy=$Ty, fattrib="b">( \stacc({a1/4, c2, d}) )
\repeatEnd
%\doubleBar
\newLine
