%	 _/8
	\lyrics<"9 8 9 7 9", dy=$Ty, fattrib="b">( e2/4 c2/8 e2 a1 e2 )
	\harmony<"A        a        a", dy=$hdy1, dx=3.5, fsize=16pt>
	\lyrics<"5 9 8 9 7 9", dy=$Ty, fattrib="b">( e1/8 e2 c2 e2 a1 e2 )
	\harmony<"G        g        g", dy=$hdy1, dx=3, fsize=16pt>
	\lyrics<"4' 9 5 9 7 9", dy=$Ty, fattrib="b">( f1 e2 e1 e2 a1 e2 )
	\harmony<"G        g        g", dy=$hdy1, dx=3, fsize=16pt>
	\lyrics<"4' 9 5 9 8 9", dy=$Ty, fattrib="b">( f1 e2 e1 e2 c2 e2 )
\newLine
	\harmony<"F           f           f", dy=$hdy1, dx=3, fsize=16pt>
	\lyrics<"6' 9 7 9 6' 9", dy=$Ty, fattrib="b">( b1 e2 a1 e2 b1 e2 ) |
	\harmony<"F           f           f", dy=$hdy1, dx=0, fsize=16pt>
