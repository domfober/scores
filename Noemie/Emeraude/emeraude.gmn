	\lyrics<"8,9 6',7',9", dy=$Ty, fattrib="b">( {c2/4,e} {b1/2,d2,e} )
	\harmony<"G      a      a", dy=$hdy1, dx=3.5, fsize=16pt>
	\lyrics<"8,9 7,8,9", dy=$Ty, fattrib="b">( {c2/4,e} {a1/2,c2,e} )
	\harmony<"F      a      a", dy=$hdy1, dx=4, fsize=16pt>
	\lyrics<"8,9 7,8,9", dy=$Ty, fattrib="b">( {c2/4,e} {a1/2,c2,e} )
\voltaBegin<"1", "|-|">
	\harmony<"G      g      g", dy=$hdy1, dx=3, fsize=16pt>
	\lyrics<"7,7' 6,6' 7,8", dy=$Py, fattrib="b">( {b1/4,e2} {g1, c2} {b1,d2} )
\voltaEnd
\repeatEnd
\voltaBegin<"2", "|-|">
	\harmony<"G      g      g", dy=$hdy1, dx=-1, fsize=16pt>
	\lyrics<"7',8' 6',7' 7,8", dy=$Py, fattrib="b">( {e2,g} {c2,e} {b1,d2} )
\voltaEnd
